import random
import math
import time  # â±ï¸ Timer module

def get_valid_integer(prompt):
    while True:
        try:
            return int(input(prompt))
        except ValueError:
            print("âŒ Please enter a valid integer.")

def choose_difficulty():
    print("\nChoose your difficulty level:")
    print("1. Easy (1-10) ğŸˆ")
    print("2. Medium (1-50) âš”ï¸")
    print("3. Hard (1-100) ğŸ§ ")
    print("4. Custom Range ğŸ› ï¸")

    while True:
        choice = input("Enter the number of your choice: ").strip()
        if choice == "1":
            return 1, 10
        elif choice == "2":
            return 1, 50
        elif choice == "3":
            return 1, 100
        elif choice == "4":
            lower = get_valid_integer("Enter the lower bound: ")
            upper = get_valid_integer("Enter the upper bound: ")
            if upper > lower:
                return lower, upper
            else:
                print("âš ï¸ Upper bound must be greater than lower bound.\n")
        else:
            print("âŒ Invalid choice. Please select a valid difficulty.")

def format_time(seconds):
    minutes = int(seconds // 60)
    secs = int(seconds % 60)
    return f"{minutes}m {secs}s" if minutes else f"{secs}s"

def play_game():
    print("ğŸ¯ Welcome to the Number Guessing Game!")
    lower, upper = choose_difficulty()

    secret_number = random.randint(lower, upper)
    total_chances = math.ceil(math.log(upper - lower + 1, 2))

    print(f"\nğŸ¤– I've picked a number between {lower} and {upper}.")
    print(f"ğŸ§  You have {total_chances} chances to guess it!\n")

    # â±ï¸ Start timer
    start_time = time.time()

    attempts = 0
    while attempts < total_chances:
        guess = get_valid_integer(f"ğŸ”¢ Attempt {attempts + 1}: Enter your guess: ")
        attempts += 1

        if guess == secret_number:
            end_time = time.time()
            total_time = end_time - start_time
            print(f"\nğŸ‰ Congratulations! You guessed the number in {attempts} {'try' if attempts == 1 else 'tries'}!")
            print(f"â±ï¸ Time taken: {format_time(total_time)}")
            break
        elif guess < secret_number:
            print("ğŸ“‰ Too low! Try a higher number.\n")
        else:
            print("ğŸ“ˆ Too high! Try a lower number.\n")
    else:
        end_time = time.time()
        total_time = end_time - start_time
        print(f"\nâŒ You've used all {total_chances} chances. The number was {secret_number}.")
        print(f"ğŸ•’ Time taken: {format_time(total_time)}")
        print("ğŸ’¡ Better luck next time!\n")

def main():
    while True:
        play_game()
        again = input("ğŸ” Do you want to play again? (yes/no): ").strip().lower()
        if again not in ("yes", "y"):
            print("ğŸ‘‹ Thanks for playing! Goodbye.")
            break
        print("\n" + "="*50 + "\n")

if __name__ == "__main__":
    main()

